    <button id = "myButton"> Button </button>

<script> 
    // Javascript Variable Declaration and Data Types 
    console.log("Hello World");
    console.log(5); 
    console.log(true);

let x = 1; 
console.log(x); // Output: 1

let y = null; 
console.log(y); // Output: null 

let z; 
console.log(z); // Output: undefined 

// JavaScript Operators 
    let a = 2; 
    let b = 3; 
    console.log(x + y); // 5 (arithmetic operator+ performs addition)
    x += 4; // assignment operator += assigns value to x 
    console.log(x); // 6
    console.log(x > y); // true (comparison operator > returns boolean)
    console.log(x < y || x > y); // true (logical operator || combines conditions)
    



    //Javascript Arrays 

    //Declare an array called "oceans" and assign it the values of the five oceans
    let oceans = ["Pacific", "Atlantic", "Indian", "Southern", "Arctic"];

// Print out the entire array to the console 
console.log(oceans); // Output: ["Pacific", "Atlantic", "Indian", "Southern", "Arctic"]

// Print out the first element of the array to the console 
console.log(oceans[0]); // Output: "Pacific"

// JavaScript Custom Functions
    function addNumbers(num1, num2) {
        return num1 + num2;
    }
    console.log(addNumbers(5,10)); // 15
    console.log(addNumbers(2, 3)); // 5

//JavaScript Objects 
    let person = {
        name: "Kayla Evans", 
        age: 19,
        height: "5 foot 3 inches",
        sayHello: function() {
            console.log("Hello, my name is " + this.name);
        }
    };

    console.log(person.name); // prints "Kayla Evans"
    console.log(person.age); // prints "19"
    console.log(person.height); // prints "5 foot 3 inches"
    person.sayHello(); // prints "Hello, my name is Kayla Evans"

    //JavaScript Conditionals 
    if (condition1) {
        // code to execute if condition1 is true 
    } else if (condition2) {
        // code to execute if condition1 is false and condition2 is true 
    } else if (condition3) { 
        //code to execute if condition1 and condition2 are false and condition3 is true 
    } else { 
        //code to execute if all previous condiitons are false 
    }

    //JavaScript Loops
    for (let i=0; i < 10; i++) { 
        console.log(i); 
    }

    //JavaScript Events
</script>

    <button id="myButton">Click me!</button>
    <script> 
    // Get the button element by its id 
    let button = document.querySelector("#myButton"); 

    //Add a click event listener to the button
    button.addEventListener("click", function(){
        //Change the text of the button when it's clicked
        button.innerHTML = "I was clicked!";
    });
</script>
